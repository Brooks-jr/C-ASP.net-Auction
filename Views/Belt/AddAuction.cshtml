@model BeltExamASP.Models.AuctionViewModel
@if(@ViewBag.User != null)

{
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    
    <br></button>
    <a class="navbar-brand" href="/">Belt Exam</a>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
        
        <a class="nav-item nav-link active" asp-controller ="Belt" asp-action="Dash">Belt <span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link" asp-controller="Belt" asp-action="Logout">Logout</a>
        <h5 class="nav-item nav-link disabled">@ViewBag.User.firstName</h5>
        
        </div>
    </div>
    </nav><br>
    <!-- ======================================================================================== -->
    <!-- ======================================================================================== -->


    <h2>New Auction</h2>


    <form asp-controller="Belt" asp-action="AddAuc" method="POST">
        <div class="form-group">
            <label for="productname">Product Name</label>
            <input id="productname" asp-for="ProductName" type="text" name="productname"  class="form-control">
        <span asp-validation-for="ProductName"></span>
        </div>
    <!-- ======================================================================================== -->
    <!-- ======================================================================================== -->   
        <div class="form-group">
            <label for="description">Description</label>
            <textarea cols="50" row="4" id="description" asp-for="Description" type="text" name="description" class="form-control"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
    <!-- ======================================================================================== -->
    <!-- ======================================================================================== -->   
        <div class="form-group">
            <label for="bid">Starting Bid</label>
            <input id="bid" asp-for="Bid" type="number" name="bid" class="form-control">
            <span asp-validation-for="Bid"></span>
        </div>
    <!-- ======================================================================================== -->
    <!-- ======================================================================================== -->   
        <div class="form-group">
        <label for="date">End Date</label>
        <input id="date" asp-for="EndDate" type="date" name="EndDate" class="form-control">
        <span asp-validation-for="EndDate"></span>
        </div>
    <!-- ======================================================================================== -->
    <!-- ======================================================================================== -->   
        <button type="submit" class="btn btn-primary">Create Auction</button>
    </form>

}else{
        <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>

            <br></button>
            <a class="navbar-brand" href="/">Belt Exam</a>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                <a class="nav-item nav-link active" href="Dash">Belt <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="Login">Sign In</a>
                </div>
            </div>
        </nav><br>
        
        <div class="jumbotron">
        <h2>Whoa, Whoa, Whoa!</h2><br>
        <p class="lead"> Hold it, you must be a registered user to view this page. Go on and sign in or register.</p> 

        <a class="btn btn-primary btn-lg" href="Register" role="button">Register</a>
        </div>

    }